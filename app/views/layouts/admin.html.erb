<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - Training Management" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <%= stylesheet_link_tag "design_tokens", "application", "data-turbo-track": "reload" %>
  </head>

  <body class="admin-layout-body">
    <nav class="navbar" role="navigation">
      <div class="nav-container">
        <div class="nav-left">
          <%= link_to admin_dashboard_index_path, class: "nav-logo-link" do %>
            <%= image_tag "odt_logo.svg", alt: "ODT", class: "nav-logo" %>
          <% end %>
        </div>
        <button type="button" class="nav-toggle" aria-label="Toggle menu" aria-expanded="false" aria-controls="nav-menu" data-nav-toggle>
          <span class="nav-toggle__bar"></span>
          <span class="nav-toggle__bar"></span>
          <span class="nav-toggle__bar"></span>
        </button>
        <div class="nav-right" id="nav-menu">
          <%= link_to admin_dashboard_index_path, class: nav_class("admin") do %><i class="bi bi-speedometer2 nav-link-icon"></i> Admin Dashboard<% end %>
          <%= link_to finance_dashboard_path, class: nav_class("cfo") do %><i class="bi bi-graph-up-arrow nav-link-icon"></i> Financial Dashboard<% end %>
          <%= link_to admin_training_classes_path, class: nav_class("training_classes") do %><i class="bi bi-calendar-event nav-link-icon"></i> Training Classes<% end %>
          <%= link_to admin_customers_path, class: nav_class("customers") do %><i class="bi bi-people nav-link-icon"></i> Customers<% end %>
          <div class="nav-dropdown <%= 'active' if controller_path == 'admin/exports' %>">
            <button type="button" class="nav-link nav-dropdown__toggle" id="navExportMenu" data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
              <i class="bi bi-file-earmark-arrow-down nav-link-icon"></i> Export
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navExportMenu">
              <li><h6 class="dropdown-header">Reports (PDF)</h6></li>
              <li><%= link_to new_admin_export_path(export_type: "financial_report", file_format: "pdf"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-pdf me-2"></i> Financial Report<% end %></li>
              <li><%= link_to new_admin_export_path(export_type: "class_report", file_format: "pdf"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-pdf me-2"></i> Class Report<% end %></li>
              <li><%= link_to new_admin_export_path(export_type: "customer_summary", file_format: "pdf"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-pdf me-2"></i> Customer Summary<% end %></li>
              <li><hr class="dropdown-divider"></li>
              <li><h6 class="dropdown-header">Data (Excel)</h6></li>
              <li><%= link_to new_admin_export_path(export_type: "financial_data", file_format: "xlsx"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-excel me-2"></i> Financial Data<% end %></li>
              <li><%= link_to new_admin_export_path(export_type: "class_attendees", file_format: "xlsx"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-excel me-2"></i> Class Attendees<% end %></li>
              <li><%= link_to new_admin_export_path(export_type: "customer_master", file_format: "xlsx"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-excel me-2"></i> Customer Master (Editable)<% end %></li>
              <li><%= link_to new_admin_export_path(export_type: "customer_for_accounting", file_format: "xlsx"), class: "dropdown-item", data: { turbo_frame: "export_modal" } do %><i class="bi bi-file-excel me-2"></i> Customer for Accounting<% end %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to admin_exports_path, class: "dropdown-item" do %><i class="bi bi-clock-history me-2"></i> Export history<% end %></li>
            </ul>
          </div>
          <%= link_to admin_settings_path, class: nav_class("settings") do %><i class="bi bi-tag nav-link-icon"></i> Promotion<% end %>
        </div>
      </div>
    </nav>

    <div class="admin-layout-main">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <%= turbo_frame_tag "export_modal" %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%= javascript_importmap_tags %>
    <%= render "shared/table_sort_filter_script" %>
    <script>
      (function() {
        var btn = document.querySelector('[data-nav-toggle]');
        var menu = document.getElementById('nav-menu');
        if (btn && menu) {
          btn.addEventListener('click', function() {
            var open = menu.classList.toggle('is-open');
            btn.setAttribute('aria-expanded', open);
          });
        }
      })();
    </script>
    <%= yield :footer_scripts if content_for?(:footer_scripts) %>
  </body>
</html>
