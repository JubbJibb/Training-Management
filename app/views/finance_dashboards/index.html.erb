<% content_for :title, "Financial Dashboard" %>

<div class="foh-exec-page finance-dashboard-refactor">
  <%= render "components/odt/page_header", title: "Financial Dashboard", subtitle: "Revenue · Cash · AR · Risk", icon: "cash-coin" do %>
    <%= link_to "Add expense", admin_training_classes_path, class: "btn btn-sm btn-primary finance-dashboard-header__btn" %>
  <% end %>

  <%= turbo_frame_tag "finance_dashboard", data: { turbo_action: "advance" } do %>
    <%= render "finance_dashboards/filters_collapsible" %>

    <%= render "finance_dashboards/health_banner", health_status: @overview&.dig(:health_status) %>

    <%= render "finance_dashboards/kpi_strip_six", summary: @summary %>

    <%= render "finance_dashboards/overdue_mini_table", summary: @summary %>

    <div class="finance-dashboard__row finance-dashboard__row--two-col">
      <div class="finance-dashboard__col finance-dashboard__col--left">
        <%= render "finance_dashboards/pl_breakdown", summary: @summary %>
      </div>
      <div class="finance-dashboard__col finance-dashboard__col--right">
        <%= render "finance_dashboards/expense_summary", summary: @summary %>
      </div>
    </div>
  <% end %>
</div>
