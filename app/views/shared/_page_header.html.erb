<%
  title = local_assigns[:title]
  subtitle = local_assigns[:subtitle]
  icon = local_assigns[:icon]
  extra_class = local_assigns[:extra_class]
  header_css = ["page-header", extra_class].compact.join(" ")
%>
<header class="<%= header_css %>">
  <div class="page-header__text">
    <h1 class="page-header__title">
      <% if icon.present? %><i class="bi bi-<%= icon %>" aria-hidden="true"></i><% end %>
      <%= title %>
    </h1>
    <% if subtitle.present? %>
      <p class="page-header__subtitle"><%= subtitle %></p>
    <% end %>
  </div>
  <% if block_given? %>
    <div class="page-header__actions" aria-label="Page actions"><%= yield %></div>
  <% end %>
</header>
