<section class="customer-360-section" aria-labelledby="documents-heading">
  <h2 class="customer-360-section__title" id="documents-heading"><i class="bi bi-file-earmark-check" aria-hidden="true"></i> Documents &amp; Payments</h2>
  <div class="customer-360-section__body">
    <% if document_rows.any? %>
      <%= odt_table(extra_class: "table-modern-wrap") do %>
        <thead>
          <tr>
            <th class="odt-th col-md"><span class="th-inner">Doc type</span></th>
            <th class="odt-th col-lg"><span class="th-inner">Doc no.</span></th>
            <th class="odt-th col-md"><span class="th-inner">Date</span></th>
            <th class="odt-th col-sm num"><span class="th-inner">Amount</span></th>
            <th class="odt-th col-sm"><span class="th-inner">Status</span></th>
          </tr>
        </thead>
        <tbody>
          <% document_rows.each do |row| %>
            <tr>
              <td class="col-md truncate"><%= row[:doc_type] %></td>
              <td class="col-lg truncate"><%= row[:doc_no] %></td>
              <td class="col-md truncate"><%= row[:date] %></td>
              <td class="col-sm odt-table-numeric num">à¸¿<%= number_with_delimiter(row[:amount].to_f.round(2), delimiter: ",") %></td>
              <td class="col-sm"><span class="badge badge-modern <%= row[:status] == "issued" ? "badge-payment-paid" : "badge-payment-pending" %>"><%= row[:status] %></span></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    <% else %>
      <p class="customer-360-empty">No document records yet. Documents are issued per registration from the class page.</p>
    <% end %>
  </div>
</section>
