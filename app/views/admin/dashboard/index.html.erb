<% content_for :title, "Admin Dashboard" %>

<div class="dashboard-page">
  <%= render "components/odt/page_header", title: "Admin Dashboard", subtitle: "Operation · Sales · Class Management", icon: "speedometer2" do %>
    <%= link_to admin_training_classes_path, class: "dashboard-header__link" do %>
      <i class="bi bi-calendar-event" aria-hidden="true"></i> Training Classes
    <% end %>
    <%= link_to admin_customers_path, class: "dashboard-header__link" do %>
      <i class="bi bi-people" aria-hidden="true"></i> Customers
    <% end %>
  <% end %>

  <%= turbo_frame_tag "dashboard_main", data: { turbo_action: "advance" } do %>
    <%= render "admin/dashboard/filter_bar" %>

    <section class="dashboard-kpi-section" aria-label="Key metrics">
      <%= render "admin/dashboard/kpi_strip" %>
    </section>

    <div class="dashboard-grid">
      <div class="dashboard-grid__left">
        <%= render "admin/dashboard/upcoming_classes" %>
        <%= render "admin/dashboard/action_required" %>
      </div>
      <div class="dashboard-grid__right">
        <%= render "admin/dashboard/leads_by_channel" %>
        <%= render "admin/dashboard/repeat_top_customers" %>
      </div>
    </div>
  <% end %>
</div>
