<div class="odt-filters-row__field">
  <label for="perf_period" class="odt-filters-row__label">Period</label>
  <select name="period" id="perf_period" class="odt-filters-row__input">
    <option value="this_month" <%= "selected" if (params[:period] || "this_month") == "this_month" %>>This month</option>
    <option value="last_month" <%= "selected" if params[:period] == "last_month" %>>Last month</option>
    <option value="ytd" <%= "selected" if params[:period] == "ytd" %>>YTD</option>
    <option value="custom" <%= "selected" if params[:period] == "custom" %>>Custom</option>
  </select>
</div>
<div class="odt-filters-row__field" data-perf-dates-visible="<%= params[:period] == 'custom' %>">
  <label for="perf_date_from" class="odt-filters-row__label">Start</label>
  <input type="date" name="date_from" id="perf_date_from" class="odt-filters-row__input" value="<%= params[:date_from] %>">
</div>
<div class="odt-filters-row__field" data-perf-dates-visible="<%= params[:period] == 'custom' %>">
  <label for="perf_date_to" class="odt-filters-row__label">End</label>
  <input type="date" name="date_to" id="perf_date_to" class="odt-filters-row__input" value="<%= params[:date_to] %>">
</div>
<div class="odt-filters-row__field">
  <label for="perf_course_id" class="odt-filters-row__label">Course</label>
  <select name="course_id" id="perf_course_id" class="odt-filters-row__input">
    <option value="">All</option>
    <% (@filter_training_classes || TrainingClass.order(date: :desc).limit(50)).each do |tc| %>
      <option value="<%= tc.id %>" <%= "selected" if params[:course_id].to_s == tc.id.to_s %>><%= tc.title %> (<%= tc.date.strftime("%d/%m/%Y") %>)</option>
    <% end %>
  </select>
</div>
<div class="odt-filters-row__field">
  <label for="perf_segment" class="odt-filters-row__label">Segment</label>
  <select name="segment" id="perf_segment" class="odt-filters-row__input">
    <option value="all" <%= "selected" if params[:segment].blank? || params[:segment] == "all" %>>All</option>
    <option value="Indi" <%= "selected" if params[:segment] == "Indi" %>>Individual</option>
    <option value="Corp" <%= "selected" if params[:segment] == "Corp" %>>Corporate</option>
  </select>
</div>
<div class="odt-filters-row__field">
  <label for="perf_channel" class="odt-filters-row__label">Channel</label>
  <input type="text" name="channel" id="perf_channel" class="odt-filters-row__input" value="<%= params[:channel] %>" placeholder="All">
</div>
<div class="odt-filters-row__field">
  <label for="perf_payment_status" class="odt-filters-row__label">Payment</label>
  <select name="payment_status" id="perf_payment_status" class="odt-filters-row__input">
    <option value="">All</option>
    <option value="Paid" <%= "selected" if params[:payment_status] == "Paid" %>>Paid</option>
    <option value="Pending" <%= "selected" if params[:payment_status] == "Pending" %>>Pending</option>
  </select>
</div>
<div class="odt-filters-row__actions">
  <button type="submit" class="odt-filters-row__btn odt-filters-row__btn--primary">Apply</button>
  <%= link_to "Clear", admin_settings_path, class: "odt-filters-row__btn odt-filters-row__btn--secondary", data: { turbo_frame: "_top" } %>
</div>
