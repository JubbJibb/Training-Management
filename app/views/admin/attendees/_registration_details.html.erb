<%# Section 2: Registration Details %>
<%= odt_card(title: "Registration Details", icon: "calendar-check", extra_class: "attendee-edit-card mb-4") do %>
  <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :status, "สถานะ", class: "form-label" %>
        <%= f.select :status, [["Class Attendee (ผู้ลงทะเบียน)", "attendee"], ["Potential Customer (ลูกค้าที่มีศักยภาพ)", "potential"]], 
            { selected: @attendee.status || "attendee" }, 
            { class: "form-select form-control-odt" } %>
        <small class="form-text text-muted">เลือกว่าบุคคลนี้เป็นผู้ลงทะเบียนแล้วหรือเป็นลูกค้าที่มีศักยภาพ</small>
      </div>
      <div class="col-md-6">
        <%= f.label :source_channel, "ช่องทางที่มา", class: "form-label" %>
        <%= f.text_field :source_channel, class: "form-control form-control-odt", placeholder: "เช่น Website, Facebook, Email" %>
      </div>
      <div class="col-md-6" id="seats-field" style="<%= 'display: none;' unless @attendee.participant_type == 'Corp' %>">
        <%= f.label :seats, "จำนวนที่นั่ง (Seats)", class: "form-label" %>
        <%= f.number_field :seats, class: "form-control form-control-odt", min: 1, value: @attendee.participant_type == 'Corp' ? (@attendee.seats || 1) : 1, readonly: (@attendee.participant_type == 'Indi') %>
        <small class="form-text text-muted">Corporate: ระบุจำนวนที่นั่งได้ (Indi จะเป็น 1 ที่นั่ง)</small>
      </div>
      <div class="col-md-6" id="seats-indi-hint" style="<%= 'display: none;' if @attendee.participant_type == 'Corp' %>">
        <span class="text-muted">จำนวนที่นั่ง: 1 (Individual)</span>
      </div>
      <div class="col-md-6">
        <%= f.label :total_classes, "จำนวนคลาสที่เคยเรียนแล้ว", class: "form-label" %>
        <%= f.number_field :total_classes, class: "form-control form-control-odt", min: 0, value: @attendee.total_classes || 0 %>
      </div>
    </div>
<% end %>
