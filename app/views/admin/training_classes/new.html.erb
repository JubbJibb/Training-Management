<% content_for :title, "New Training Class" %>

<%= render "components/odt/page_header", title: "New Training Class", subtitle: @course ? "From course: #{@course.title}" : "Create a new class", icon: "plus-circle" do %>
  <% if @course %>
    <%= link_to admin_course_path(@course), class: "odt-btn odt-btn--secondary odt-btn--sm" do %>
      <i class="bi bi-arrow-left" aria-hidden="true"></i> Back to Course
    <% end %>
  <% else %>
    <%= link_to admin_training_classes_path, class: "odt-btn odt-btn--secondary odt-btn--sm" do %>
      <i class="bi bi-arrow-left" aria-hidden="true"></i> Back to Classes
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-body">
        <%= form_with model: [:admin, @training_class], local: true do |f| %>
          <% if @training_class.errors.any? %>
            <div class="alert alert-danger">
              <h5>Please fix the following errors:</h5>
              <ul class="mb-0">
                <% @training_class.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control", required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 4 %>
          </div>
          
          <div class="row">
            <div class="col-md-4 mb-3">
              <%= f.label :date, "Start Date", class: "form-label" %>
              <%= f.date_field :date, class: "form-control", required: true %>
            </div>
            
            <div class="col-md-4 mb-3">
              <%= f.label :end_date, "End Date (optional)", class: "form-label" %>
              <%= f.date_field :end_date, class: "form-control" %>
              <small class="form-text text-muted">Leave blank for single day class</small>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :start_time, class: "form-label" %>
              <%= f.time_field :start_time, class: "form-control" %>
            </div>
            
            <div class="col-md-6 mb-3">
              <%= f.label :end_time, class: "form-label" %>
              <%= f.time_field :end_time, class: "form-control" %>
            </div>
          </div>
          
          <div class="mb-3">
            <%= f.label :location, class: "form-label" %>
            <%= f.text_field :location, class: "form-control", required: true %>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :instructor, class: "form-label" %>
              <%= f.text_field :instructor, class: "form-control" %>
            </div>
            
            <div class="col-md-6 mb-3">
              <%= f.label :max_attendees, class: "form-label" %>
              <%= f.number_field :max_attendees, class: "form-control", min: 1 %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :price, "ราคาต่อหัว (บาท)", class: "form-label" %>
              <%= f.number_field :price, class: "form-control", step: 0.01, min: 0, value: 0, placeholder: "ราคาขายต่อคน" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :cost, "ต้นทุนของ Class (บาท)", class: "form-label" %>
              <%= f.number_field :cost, class: "form-control", step: 0.01, min: 0, value: 0 %>
            </div>
          </div>
          
          <div class="d-flex gap-2 justify-content-end">
            <%= f.submit "Create Training Class", class: "odt-btn odt-btn--primary odt-btn--sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
