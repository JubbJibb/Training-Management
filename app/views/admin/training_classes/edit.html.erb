<% content_for :title, "Edit Training Class" %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= link_to admin_training_class_path(@training_class), class: "btn btn-outline-secondary mb-3" do %>
      <i class="bi bi-arrow-left"></i> Back to Class
    <% end %>
    
    <div class="card">
      <div class="card-header">
        <h3><i class="bi bi-pencil"></i> Edit Training Class</h3>
      </div>
      <div class="card-body">
        <%= form_with model: [:admin, @training_class], local: true do |f| %>
          <% if @training_class.errors.any? %>
            <div class="alert alert-danger">
              <h5>Please fix the following errors:</h5>
              <ul class="mb-0">
                <% @training_class.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control", required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 4 %>
          </div>
          
          <div class="row">
            <div class="col-md-4 mb-3">
              <%= f.label :date, "Start Date", class: "form-label" %>
              <%= f.date_field :date, class: "form-control", required: true %>
            </div>
            
            <div class="col-md-4 mb-3">
              <%= f.label :end_date, "End Date (optional)", class: "form-label" %>
              <%= f.date_field :end_date, class: "form-control" %>
              <small class="form-text text-muted">Leave blank for single day class</small>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :start_time, class: "form-label" %>
              <%= f.time_field :start_time, class: "form-control" %>
            </div>
            
            <div class="col-md-6 mb-3">
              <%= f.label :end_time, class: "form-label" %>
              <%= f.time_field :end_time, class: "form-control" %>
            </div>
          </div>
          
          <div class="mb-3">
            <%= f.label :location, class: "form-label" %>
            <%= f.text_field :location, class: "form-control", required: true %>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :instructor, class: "form-label" %>
              <%= f.text_field :instructor, class: "form-control" %>
            </div>
            
            <div class="col-md-6 mb-3">
              <%= f.label :max_attendees, class: "form-label" %>
              <%= f.number_field :max_attendees, class: "form-control", min: 1 %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :price, "ราคาต่อหัว (บาท)", class: "form-label" %>
              <%= f.number_field :price, class: "form-control", step: 0.01, min: 0, value: @training_class.price || 0, placeholder: "ราคาขายต่อคน" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :cost, "ต้นทุนของ Class (บาท)", class: "form-label" %>
              <%= f.number_field :cost, class: "form-control", step: 0.01, min: 0, value: @training_class.cost || 0 %>
            </div>
          </div>
          
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Cancel", admin_training_class_path(@training_class), class: "btn btn-outline-secondary" %>
            <%= f.submit "Update Training Class", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
