<% content_for :title, "Training Classes" %>

<div class="tc-index-page">
  <%= render "components/odt/page_header", title: "Training Classes", subtitle: "Manage upcoming and past classes", icon: "calendar-event" do %>
    <%= link_to new_admin_training_class_path, class: "odt-btn odt-btn--primary odt-btn--md" do %>
      <i class="bi bi-plus-circle odt-btn__icon odt-btn__icon--left" aria-hidden="true"></i>
      <span class="odt-btn__label">New Training Class</span>
    <% end %>
  <% end %>

  <section class="tc-index-kpi-section" aria-label="Key metrics">
    <%= render "admin/training_classes/kpi_strip" %>
  </section>

  <%= render "admin/training_classes/tabs" %>

  <div class="tc-index-filter-wrap">
    <%= render "admin/training_classes/filter_bar" %>
  </div>

  <div class="tc-index-content">
    <%= render "admin/training_classes/table" %>
  </div>
</div>
