<%# Insights: same card style as Admin Dashboard %>
<%
  insights = local_assigns[:insights] || []
%>
<%= odt_card(title: "Insights", icon: "lightbulb", extra_class: "class-finance-insights") do %>
  <% if insights.any? %>
    <ul class="class-finance-insights-list" style="list-style: none; padding: 0; margin: 0;">
      <% insights.each do |text| %>
        <li class="class-finance-insights-item"><%= text %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="cfo-empty mb-0 class-finance-insights-empty">Add more payments and expenses to see insights.</p>
  <% end %>
<% end %>
