<% d = finance_dashboard %>
<% k = d[:kpis] %>
<% w = d[:waterfall] %>
<% p = d[:profitability] %>
<% expense_list = d[:expense_list] %>

<div class="cfo-finance-page">
  <%= render "admin/training_classes/finance/cfo_header", training_class: training_class %>

  <%= render "admin/training_classes/finance/kpi_strip", kpis: k, waterfall: w, ar_aging: d[:ar_aging], pending_count: d[:payment_status_list].count { |r| r[:status] == "Pending" }, profitability: p %>

  <%= render "admin/training_classes/finance/pricing_funnel", waterfall: w %>

  <%= render "admin/training_classes/finance/cash_collection", dashboard: d %>

  <%= render "admin/training_classes/finance/profit_cost", profitability: p, cost_by_category: d[:cost_by_category], expense_list: expense_list, training_class: training_class %>

  <%= render "admin/training_classes/finance/tables", dashboard: d, expense_list: expense_list, training_class: training_class %>
</div>
