<% content_for :title, "Action Center" %>

<div class="dashboard-page">
  <%= render "components/odt/page_header", title: "Action Center", subtitle: "Execution priorities", icon: "list-check" %>

  <div class="action-center-sections mt-4">
    <%
      critical = @data[:critical] || []
      warning = @data[:warning] || []
      follow_up = @data[:follow_up] || []
    %>
    <div class="row g-3">
      <div class="col-md-4">
        <div class="card odt-card border-danger">
          <div class="card-header odt-card__header bg-danger text-white">
            <h3 class="card-title odt-card__title mb-0">Critical</h3>
          </div>
          <div class="card-body">
            <% if critical.empty? %>
              <p class="text-muted mb-0">No critical items.</p>
            <% else %>
              <ul class="list-group list-group-flush">
                <% critical.each do |item| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item[:label] %> <span class="badge bg-danger rounded-pill"><%= item[:count] %></span>
                    <%= link_to item[:cta], (item[:path] == "finance_ar" ? finance_ar_path : "#"), class: "btn btn-sm btn-outline-danger" %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card odt-card border-warning">
          <div class="card-header odt-card__header bg-warning text-dark">
            <h3 class="card-title odt-card__title mb-0">Warning</h3>
          </div>
          <div class="card-body">
            <% if warning.empty? %>
              <p class="text-muted mb-0">No warning items.</p>
            <% else %>
              <ul class="list-group list-group-flush">
                <% warning.each do |item| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item[:label] %> <% if item[:count].to_i > 1 %><span class="badge bg-warning text-dark rounded-pill"><%= item[:count] %></span><% end %>
                    <% url = item[:path] == "finance_ar" ? finance_ar_path : (item[:path] == "training_class" && item[:training_class_id].present? ? admin_training_class_path(item[:training_class_id]) : (item[:path] == "admin_dashboard" ? admin_dashboard_index_path : "#")) %>
                    <%= link_to item[:cta], url, class: "btn btn-sm btn-outline-warning" %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card odt-card border-success">
          <div class="card-header odt-card__header bg-success text-white">
            <h3 class="card-title odt-card__title mb-0">Follow-up</h3>
          </div>
          <div class="card-body">
            <% if follow_up.empty? %>
              <p class="text-muted mb-0">No follow-up items.</p>
            <% else %>
              <ul class="list-group list-group-flush">
                <% follow_up.each do |item| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item[:label] %> <span class="badge bg-success rounded-pill"><%= item[:count] %></span>
                    <%= link_to item[:cta], (item[:path] == "admin_dashboard" ? admin_dashboard_index_path : "#"), class: "btn btn-sm btn-outline-success" %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card odt-card mt-4">
      <div class="card-header odt-card__header">
        <h3 class="card-title odt-card__title">Task Queue</h3>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover odt-table mb-0">
            <thead>
              <tr>
                <th>Priority</th>
                <th>Type</th>
                <th>Client / Class</th>
                <th>Due date</th>
                <th>Suggested action</th>
                <th class="text-end">Action</th>
              </tr>
            </thead>
            <tbody>
              <% (@data[:task_queue] || []).each do |row| %>
                <tr>
                  <td><span class="badge <%= row[:priority] == 'High' ? 'bg-danger' : 'bg-warning text-dark' %>"><%= row[:priority] %></span></td>
                  <td><%= row[:type] %></td>
                  <td><%= row[:client_or_class] %></td>
                  <td><%= row[:due_date]&.strftime("%d %b %Y") || "â€”" %></td>
                  <td><%= row[:suggested_action] %></td>
                  <td class="text-end">
                    <% if row[:training_class_id].present? && row[:attendee_id].present? %>
                      <%= link_to "View", admin_training_class_attendee_path(row[:training_class_id], row[:attendee_id]), class: "btn btn-sm btn-outline-primary" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <% if (@data[:task_queue] || []).empty? %>
          <p class="text-muted p-3 mb-0">No tasks in queue.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
